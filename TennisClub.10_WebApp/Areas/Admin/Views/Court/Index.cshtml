@model IEnumerable<TennisClub_0._1.Models.CourtViewModel>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Indoor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Double)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (CourtViewModel? item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Indoor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Double)
            </td>
            <td>
                <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-area="Admin" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>