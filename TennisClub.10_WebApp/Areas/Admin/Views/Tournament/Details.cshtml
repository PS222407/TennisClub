@using TennisClub_0._1.ViewModels
@model TournamentViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Tournament</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaxMembers)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxMembers)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDateTime)
        </dd>
        <dt class="col-sm-2">
            CourtNumbers:
        </dt>
        <dd class="col-sm-10">
            @if (Model.Courts != null && Model.Courts.Any())
            {
                <ul>
                    @foreach (CourtViewModel court in Model.Courts)
                    {
                        <li>@court.Number</li>
                    }
                </ul>
            }
            else
            {
                <p>No courts selected</p>
            }
        </dd>
        <dt class="col-sm-2">
            Participants:
        </dt>
        <dd class="col-sm-10">
            @if (Model.Participants != null && Model.Participants.Any())
            {
                <ul>
                    @foreach (UserViewModel participant in Model.Participants)
                    {
                        <li>@participant.UserName</li>
                    }
                </ul>
            }
            else
            {
                <p>No participants for this tournament yet</p>
            }
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Tournament Image" style="max-width: 500px"/>
            }
            else
            {
                <p>No image available</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>