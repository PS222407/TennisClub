@using Microsoft.IdentityModel.Tokens
@model TennisClub_0._1.ViewModels.TournamentViewModel

@{
    ViewData["Title"] = Model.Name;
    Layout = "_Layout";
}

<div>
    <h4>Toernooi: @Html.DisplayFor(model => model.Name)</h4>
    <hr/>

    <div class="container row mb-5">
        @if (!Model.ImageUrl.IsNullOrEmpty())
        {
            <img class="col-md-4" src="@Model.ImageUrl" alt="Tournament image"/>
        }
        else
        {
            <img class="col-md-4" src="~/images/tournament.jpg" alt="Tournament Image"/>
        }
        <div class="col-md-8">
            <div> @Html.DisplayFor(model => model.Name) </div>
            <div> @Html.DisplayFor(model => model.Description)</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="mb-2">Prijs: @Html.DisplayFor(model => model.Price)</div>
            @if (Model.Participants == null || !Model.Participants.Any())
            {
                <div class="mb-2">Nog @Model.MaxMembers plekken over</div>
            }
            else if (Model.MaxMembers - Model.Participants.Count == 1)
            {
                <div class="mb-2">Nog @(Model.MaxMembers - Model.Participants.Count) plek over</div>
            }
            else
            {
                <div class="mb-2">Nog @(Model.MaxMembers - Model.Participants.Count) plekken over</div>
            }
        </div>
        <div class="col-md-3">
            <a class="btn btn-primary" asp-area="" asp-controller="Tournament" asp-action="Join" asp-route-id="@Model.Id">Schrijf je hier in!</a>
        </div>
    </div>
</div>